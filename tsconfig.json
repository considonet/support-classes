{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noImplicitAny": true,
    "removeComments": false,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "keyofStringsOnly": true,
    "jsx": "react"
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*"
  ]
}
